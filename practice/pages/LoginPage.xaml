<Page x:Class="practice.pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practice.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource BlockCommon}" HorizontalAlignment="Left" TextAlignment="Left" Text="Логин:"/>
                <TextBox />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource BlockCommon}" HorizontalAlignment="Left" TextAlignment="Left" Text="Пароль:"/>
                <PasswordBox />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Button Name="btnLogin" Click="BtnLogin_Click" Content="Войти"/>
                <TextBlock Style="{StaticResource BlockCommon}" Width="auto"><Hyperlink NavigateUri="RegisterPage.xaml" Click="BtnToRegister_Click">Создать аккаунт?</Hyperlink></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
